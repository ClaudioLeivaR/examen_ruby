<h1>Departamentos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Numero</th>
      <th>Building</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.numero %></td>
        <td><%= apartment.building_id %></td>
        <td><%= link_to 'mostrar', apartment, class:"btn btn-dark" %></td>
        <td><%= link_to 'Editar', edit_apartment_path(apartment), class:"btn btn-dark" %></td>
        <td><%= link_to 'Eliminar', apartment, method: :delete, data: { confirm: 'Â¿Estas seguro de eliminar este departamento?' }, class:"btn btn-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

